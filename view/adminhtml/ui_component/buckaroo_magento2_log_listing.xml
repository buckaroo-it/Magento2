<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">buckaroo_magento2_log_listing.buckaroo_magento2_log_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>buckaroo_magento2_log_columns</spinner>
		<deps>
			<dep>buckaroo_magento2_log_listing.buckaroo_magento2_log_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="buckaroo_magento2_log_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">log_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Buckaroo_Magento2::Log</aclResource>
		<dataProvider name="buckaroo_magento2_log_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>log_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="buckaroo_magento2_log_columns">
		<selectionsColumn name="ids">
			<settings>
				<indexField>log_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="log_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="log_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Log ID</label>
			</settings>
		</column>
		<column name="channel">
			<settings>
				<filter>text</filter>
				<label translate="true">Channel</label>
			</settings>
		</column>
		<column name="level">
 			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Buckaroo\Magento2\Model\Config\Source\LogLevel</item>
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">select</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
					<item name="dataType" xsi:type="string">select</item>
					<item name="sorting" xsi:type="string">asc</item>
					<item name="sortOrder" xsi:type="number">1</item>
					<item name="label" translate="true" xsi:type="string">Level</item>
				</item>
        	</argument>
		</column>
		<column name="message" class="Buckaroo\Magento2\Ui\Component\Listing\Columns\Nicelog">
		 	<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
					<item name="label" xsi:type="string" translate="true">Message</item>
				</item>
        	</argument>
			<settings>
				<filter>text</filter>
				<label translate="true">Message</label>
			</settings>
		</column>
		<column name="time">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">dateRange</item>
					<item name="editor" xsi:type="string">text</item>
					<item name="label" xsi:type="string" translate="true">Time</item>
					<item name="sortOrder" xsi:type="number">20</item>
				</item>
			</argument>
		</column>
		<column name="session_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Session ID</label>
			</settings>
		</column>
		<column name="customer_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Customer ID</label>
			</settings>
		</column>
		<column name="quote_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Quote ID</label>
			</settings>
		</column>
		<column name="order_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Order ID</label>
			</settings>
		</column>
	</columns>
</listing>
