<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Buckaroo_Magento2::css/ideal-fast-checkout.css" />
    </head>
    <body>
        <referenceContainer name="product.info.main">
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\Applepay" name="buckaroo_magento2.product.info.applepay"
                   before="product.info.extrahint" template="Buckaroo_Magento2::catalog/product/view/applepay.phtml">
            </block>
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\PaypalExpress" name="buckaroo_magento2.product.info.paypal.express"
                   before="product.info.extrahint" template="Buckaroo_Magento2::catalog/product/view/paypal-express.phtml">
            </block>
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\Idin" name="buckaroo_magento2.product.info.idin"
                   before="product.info.extrahint" template="Buckaroo_Magento2::catalog/product/view/idin.phtml">
            </block>
            <block class="Buckaroo\Magento2\Block\Catalog\Product\View\IdealFastCheckout" name="buckaroo_magento2.product.info.ideal.fast.checkout"
                   before="product.info.extrahint" template="Buckaroo_Magento2::catalog/product/view/ideal-fast-checkout.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
