<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="buckaroo_module" sortOrder="998" translate="label" class="buckaroo-section">
            <label>Buckaroo</label>
        </tab>
        <section id="tax">
            <include path="Buckaroo_Magento2::system/tax.xml"/>
        </section>

        <section id="buckaroo_magento2" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <tab>buckaroo_module</tab>
            <resource>Sales_Buckaroo::configuration</resource>
            <include path="Buckaroo_Magento2::system/support.xml"/>
            <include path="Buckaroo_Magento2::system/account.xml"/>
        </section>

        <section id="payment">
            <include path="Buckaroo_Magento2::system/payment_methods.xml"/>
        </section>
    </system>
</config>
