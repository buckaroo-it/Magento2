<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <!-- Payment section -->
    <group id="buckaroo_magento2_payment_section" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[<div class="buckaroo-payment-byline">Payment methods</div>
        <div class="block-legend">
            <h3>Legend</h3>
            <div>
                <ul id="legend">
                    <li class="disabled">
                        <span class="img"></span>
                        <span class="text">Payment method: </span>
                        <span class="status">Disabled</span>
                    </li>
                    <li class="test">
                        <span class="img"></span>
                        <span class="text">Payment method: </span>
                        <span class="status">Test Mode</span>
                    </li>
                    <li class="live">
                        <span class="img"></span>
                        <span class="text">Payment method: </span>
                        <span class="status">Live Mode</span>
                    </li>
                </ul>
            </div>
        </div>]]></label>
        <fieldset_css>buckaroo_magento2-section</fieldset_css>
        <attribute type="expanded">1</attribute>
        <include path="Buckaroo_Magento2::system/payment_methods_list.xml"/>
    </group>
</include>
