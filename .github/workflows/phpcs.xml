<?xml version="1.0"?>
<ruleset name="Buckaroo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
    <description>Buckaroo Magento2 Coding Standard for GitHub Actions</description>
    
    <!-- Use Magento2 coding standard (installed via composer) -->
    <rule ref="Magento2">
        <!-- Override line length to 250 characters -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>
    
    <rule ref="PSR2">
        <!-- Exclude line length from PSR2 as well -->
        <exclude name="Generic.Files.LineLength"/>
    </rule>
    
    <!-- Set custom line length limit -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="250"/>
            <property name="absoluteLineLimit" value="300"/>
        </properties>
    </rule>
    
    <rule ref="PEAR.Commenting.FunctionComment.Missing"/>
    <rule ref="Squiz.PHP.CommentedOutCode.Found"/>
    
    <!-- Exclude specific paths from checks -->
    <exclude-pattern>*/Test/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/.github/workflows/*.php</exclude-pattern>
</ruleset>
